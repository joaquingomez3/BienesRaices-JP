@model IEnumerable<bienesraices.Models.Inmueble>

@{
    ViewData["Title"] = "Listado de Inmuebles";
}

<div class="container mt-5">
    <div class="mb-3 d-flex justify-content-start"></div>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Volver
    </a>
</div>

<div class="card mt-3 shadow-lg border-0 rounded-3 ">
    <div class="card-header  text-white text-center py-3" style="background-color:#bb4900; color: #fff;">
        <h2 class="mb-0">ðŸ“‹ Lista de Inmuebles</h2>
    </div>
    <div class="mt-3 ms-3">
        <a asp-controller="Inmueble" asp-action="Crear" class="btn btn-outline-dark">
            <i class="bi bi-person-plus-fill me-1"></i> Agregar Inmueble
        </a>
    </div>

    <div class="card-body">

        <table id="tablaInmueble" class="table table-hover table-striped align-middle">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().Id)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Direccion)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Uso)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Ambientes)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Coordenadas)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Precio)</th>
                    <th>@Html.DisplayNameFor(model => model.First().PropietarioNombre)</th>
                    <th>@Html.DisplayNameFor(model => model.First().TipoInmuebleNombre)</th>

                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                        <td>@Html.DisplayFor(modelItem => item.Direccion)</td>
                        <td>@Html.DisplayFor(modelItem => item.Uso)</td>
                        <td>@Html.DisplayFor(modelItem => item.Ambientes)</td>
                        <td>@Html.DisplayFor(modelItem => item.Coordenadas)</td>
                        <td>@Html.DisplayFor(modelItem => item.Precio)</td>
                        <th>@Html.DisplayFor(modelItem => item.PropietarioNombre)</th>
                        <th>@Html.DisplayFor(modelItem => item.TipoInmuebleNombre)</th>
                        <td class="text-center">

                            <a asp-controller="Inmueble" asp-action="Editar" asp-route-id="@item.Id"
                                class="btn btn-sm btn-outline-warning me-1 ">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>

                            <form asp-action="Eliminar" asp-controller="Inmueble" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i> Eliminar
                                </button>
                            </form>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
</div>




