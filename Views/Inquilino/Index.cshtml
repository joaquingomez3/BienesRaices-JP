@model IEnumerable<bienesraices.Models.Inquilino>

@{
    ViewData["Title"] = "Listado de Inquilinos";
}

<div class="container mt-5">
    <div class="mb-3 d-flex justify-content-start"></div>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Volver
    </a>
</div>

<div class="card shadow-lg border-0 rounded-3">
    <div class="card-header  text-white text-center py-3" style="background-color:#bb4900; color: #fff;">
        <h2 class="mb-0">ðŸ“‹ Lista de Inquilinos</h2>
    </div>
    <div class="mt-3 ms-3">
        <a asp-controller="Inquilino" asp-action="Crear" class="btn btn-outline-dark">
            <i class="bi bi-person-plus-fill me-1"></i> Agregar Inquilino
        </a>
    </div>

    <div class="card-body">

        <table id="tablaInquilinos" class="table table-hover table-striped align-middle">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().Id)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Dni)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Nombre_completo)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Telefono)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Email)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Direccion)</th>

                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                        <td>@Html.DisplayFor(modelItem => item.Dni)</td>
                        <td>@Html.DisplayFor(modelItem => item.Nombre_completo)</td>
                        <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.Direccion)</td>
                        <td class="text-center">
                            <a asp-controller="Inquilino" asp-action="Editar" asp-route-id="@item.Id"
                                class="btn btn-sm btn-outline-warning me-1">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>

                            <a class="btn btn-sm btn-outline-danger" href="@Url.Action("Delete", new { id = item.Id })">
                                <i class="bi bi-trash"></i> Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
</div>




<script>
    $(document).ready(function () {
        // Mostrar alerta si hay mensaje de Ã©xito desde TempData
        @if (TempData["MensajeExito"] != null)
            {
                <text>
                    Swal.fire({
                        icon: 'success',
                    title: 'Â¡Ã‰xito!',
                    text: '@TempData["MensajeExito"]',
                    confirmButtonColor: '#bb4900'
                                            });
                </text>
        }


</script>


<script>
                $(document).ready(function () {
                    $('#tablaInquilinos').DataTable({
                        "language": {
                            "url": "https://cdn.datatables.net/plug-ins/1.13.4/i18n/es-ES.json"
                        },
                        "pageLength": 5,
                        "lengthMenu": [5, 10, 25, 50],
                        "order": [[0, "asc"]]
                    });
                });
</script>
