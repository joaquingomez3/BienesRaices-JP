@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService


<div class="container mt-3">
    <!-- Encabezado -->
    <div class="text-center mb-1">
        <img src="~/imagenes/imagen.png" alt="JP Bienes Raíces" style="max-height:100px;" class="mb-1" />
        <h1 class="fw-bold" style="color:#47220d;">Bienvenido</h1>
        <p class="text-muted" style="font-size:1.2rem;">Sistema de Gestión de Alquileres</p>
    </div>

    <!-- Accesos rápidos -->

    <div class="row g-4">
        @if (User.IsInRole("admin"))
        {
            <!-- Propietarios -->
            <div class="col-md-4">
                <div class="card h-100 text-center shadow-lg border-0 rounded-4 card-hover">
                    <div class="card-body p-4">
                        <i class="bi bi-people-fill display-3 mb-3" style="color:#bb4900;"></i>
                        <h5 class="fw-bold mb-3" style="color:#47220d;">Propietarios</h5>
                        <a asp-controller="Propietario" asp-action="Index" class="btn btn-lg w-100 text-white"
                            style="background-color:#bb4900;">Gestionar</a>
                    </div>
                </div>
            </div>
        }
        @if (User.IsInRole("admin"))
        {
            <!-- Inmuebles -->
            <div class="col-md-4">
                <div class="card h-100 text-center shadow-lg border-0 rounded-4 card-hover">
                    <div class="card-body p-4">
                        <i class="bi bi-house-fill display-3 mb-3" style="color:#47220d;"></i>
                        <h5 class="fw-bold mb-3" style="color:#47220d;">Inmuebles</h5>
                        <a asp-controller="Inmueble" asp-action="Index" class="btn btn-lg w-100 text-white"
                            style="background-color:#47220d;">Gestionar</a>
                    </div>
                </div>
            </div>
        }

        @if (User.IsInRole("admin"))
        {
            <!-- Inquilinos -->
            <div class="col-md-4">
                <div class="card h-100 text-center shadow-lg border-0 rounded-4 card-hover">
                    <div class="card-body p-4">
                        <i class="bi bi-person-badge-fill display-3 mb-3" style="color:#bb4900;"></i>
                        <h5 class="fw-bold mb-3" style="color:#47220d;">Inquilinos</h5>
                        <a asp-controller="Inquilino" asp-action="Index" class="btn btn-lg w-100 text-white"
                            style="background-color:#bb4900;">Gestionar</a>
                    </div>
                </div>
            </div>
        }

        @if (User.IsInRole("admin"))
        {
            <!-- Contratos -->
            <div class="col-md-4">
                <div class="card h-100 text-center shadow-lg border-0 rounded-4 card-hover">
                    <div class="card-body p-4">
                        <i class="bi bi-file-earmark-text-fill display-3 mb-3" style="color:#47220d;"></i>
                        <h5 class="fw-bold mb-3" style="color:#47220d;">Contratos</h5>
                        <a href="/Contrato" class="btn btn-lg w-100 text-white"
                            style="background-color:#47220d;">Gestionar</a>
                    </div>
                </div>
            </div>
        }

        @if (User.IsInRole("admin"))
        {
            <!-- Pagos -->
            <div class="col-md-4">
                <div class="card h-100 text-center shadow-lg border-0 rounded-4 card-hover">
                    <div class="card-body p-4">
                        <i class="bi bi-cash-stack display-3 mb-3" style="color:#bb4900;"></i>
                        <h5 class="fw-bold mb-3" style="color:#47220d;">Pagos</h5>
                        <a href="/Pago" class="btn btn-lg w-100 text-white" style="background-color:#bb4900;">Gestionar</a>
                    </div>
                </div>
            </div>
        }

        <!-- Usuarios -->
        <div class="col-md-4">
            <div class="card h-100 text-center shadow-lg border-0 rounded-4 card-hover">
                @if (User.IsInRole("empleado"))
                {
                    <div class="card-body p-4">
                        <i class="bi bi-person-circle display-3 mb-3" style="color:#47220d;"></i>
                        <h5 class="fw-bold mb-3" style="color:#47220d;">Editar Perfil</h5>

                        <a asp-controller="Usuario" asp-action="Editar" class="btn btn-lg w-100 text-white"
                            style="background-color:#47220d;">Gestionar</a>
                    </div>
                }
                else if (User.IsInRole("admin"))
                {
                    <div class="card-body p-4">
                        <i class="bi bi-person-circle display-3 mb-3" style="color:#47220d;"></i>
                        <h5 class="fw-bold mb-3" style="color:#47220d;">Usuarios</h5>
                        <a asp-controller="Usuario" asp-action="Index" class="btn btn-lg w-100 text-white"
                            style="background-color:#47220d;">Gestionar</a>
                    </div>
                }

            </div>
        </div>
    </div>
</div>

<!-- Estilos adicionales -->
<style>
    .card-hover {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .card-hover:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
    }
</style>
