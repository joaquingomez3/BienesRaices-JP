@model IEnumerable<bienesraices.Models.Usuario>

@{
    ViewData["Title"] = "ðŸ“‹ Usuarios activos";
}

<div class="container mt-5">
    <h2 class="mb-4">ðŸ“‹ Usuarios Activos</h2>

    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary mb-3">
        <i class="bi bi-arrow-left"></i> Volver
    </a>

    <a asp-action="Crear" class="btn btn-success mb-3">
        <i class="bi bi-person-plus"></i> Nuevo Usuario
    </a>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Email</th>
                <th class="text-center">Tipo</th>
                <th class="text-center">Foto</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var usuario in Model)
            {
                <tr>
                    <td>@usuario.Nombre_usuario</td>
                    <td>@usuario.Apellido_usuario</td>
                    <td>@usuario.Email</td>
                    <td class="text-center">@usuario.RolUsuario</td>
                    <td class="text-center">
                        @if (!string.IsNullOrEmpty(usuario.Foto))
                        {
                            <img src="@usuario.Foto" alt="Foto" width="40" height="40" class="rounded-circle" />
                        }
                        else
                        {
                            <i class="bi bi-person-circle fs-3 text-secondary"></i>
                        }
                    </td>
                    <td class="text-center">
                        <a asp-action="Editar" asp-route-id="@usuario.Id" class="btn btn-sm btn-warning me-1">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <form asp-action="Eliminar" asp-route-id="@usuario.Id" method="post" class="d-inline form-eliminar">
                            <button type="submit" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <nav aria-label="PaginaciÃ³n">
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                </li>
            }
        </ul>
    </nav>
</div>

@section Scripts {
    <script>

        $(function () {
            $('.form-eliminar').on('submit', function (e) {
                e.preventDefault(); // Evita el envÃ­o automÃ¡tico

                const form = this;

                Swal.fire({
                    title: 'Â¿EstÃ¡s seguro?',
                    text: "Esta acciÃ³n eliminarÃ¡ un propietario.",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#bb4900',
                    cancelButtonColor: '#6c757d',
                    confirmButtonText: 'Eliminar',
                    cancelButtonText: 'Cancelar'
                }).then((result) => {
                    if (result.isConfirmed) {
                        form.submit(); // EnvÃ­a el formulario si el usuario confirma
                    }
                });
            });

            // Alerta de Ã©xito si viene desde TempData
            @if (TempData["MensajeExito"] != null)
                {
                    <text>
                        Swal.fire({
                            icon: 'success',
                        title: 'Â¡Ã‰xito!',
                        text: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(TempData["MensajeExito"])),
                        confirmButtonColor: '#bb4900'
                                                                                                                            });
                    </text>
            }
            });
    </script>
}
