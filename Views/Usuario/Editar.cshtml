@model bienesraices.Models.Usuario

@{
    ViewData["Title"] = "Editar Usuario";
}

<div class="container mt-5">
    <a asp-action="Index" class="btn btn-secondary mb-3">
        <i class="bi bi-arrow-left"></i> Volver
    </a>

    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header text-white text-center py-3" style="background-color:#bb4900;">
            <h2 class="mb-0">✏️ Editar Usuario</h2>
        </div>

        <div class="card-body">
            <form asp-action="Editar" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Nombre_usuario" class="form-label">Nombre</label>
                    <input asp-for="Nombre_usuario" class="form-control" />
                    <span asp-validation-for="Nombre_usuario" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Apellido_usuario" class="form-label">Apellido</label>
                    <input asp-for="Apellido_usuario" class="form-control" />
                    <span asp-validation-for="Apellido_usuario" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Contraseña</label>
                    <input asp-for="Password" class="form-control" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-3 text-center">
                    <label class="form-label">Foto actual</label><br />
                    @if (!string.IsNullOrEmpty(Model.Foto))
                    {
                        <img src="@Model.Foto" alt="Foto" width="80" height="80" class="rounded-circle mb-2" />
                    }
                    else
                    {
                        <i class="bi bi-person-circle fs-1 text-secondary"></i>
                    }
                    <input type="file" name="Foto" class="form-control w-50 mx-auto" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Tipo de usuario</label>
                    <input type="text" class="form-control" value="@Model.RolUsuario" disabled />
                </div>

                <div class="mb-3">
                    <label class="form-label">Estado</label>
                    <input type="text" class="form-control" value="@(Model.Activo ? "Activo" : "Inactivo")" disabled />
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-outline-warning me-2">
                        <i class="bi bi-pencil-square"></i> Guardar cambios
                    </button>
                    <a asp-action="Index" class="btn btn-outline-danger">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>