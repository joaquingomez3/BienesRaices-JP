@model bienesraices.Models.Contrato


@{
    ViewData["Title"] = "Crear pago";
}
<div class="container mt-5">
    <h2 class="mb-4 text-center">âž• Crear Contrato</h2>
    @if (!ViewData.ModelState.IsValid)
    {
        if (ViewData.ModelState.ErrorCount > 0)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <div>@error.ErrorMessage</div>
                }
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    }

    <form asp-action="Crear" method="post" class="shadow-lg p-4 rounded bg-light">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="row g-3">

            <!-- Inquilino -->
            <div class="col-md-6">
                <label asp-for="Id_inquilino" class="form-label fw-bold"></label>
                <select asp-for="Id_inquilino" class="form-select" asp-items="ViewBag.Inquilinos">
                    <option value="">Seleccionar inquilino...</option>
                </select>
                <span asp-validation-for="Id_inquilino" class="text-danger"></span>
            </div>

            <!-- Inmueble -->
            <div class="col-md-6">
                <label class="form-label fw-bold">Inmueble</label>
                <input type="text" class="form-control" value="@ViewBag.InmuebleNombre" readonly />
                <input asp-for="Id_inmueble" type="hidden" />

            </div>

            <!-- Fecha de Inicio -->
            <div class="col-md-6">
                <label asp-for="Fecha_inicio" class="form-label fw-bold"></label>
                <input asp-for="Fecha_inicio" type="date" class="form-control"
                    value="@(Model.Fecha_inicio == DateTime.MinValue ? "" : Model.Fecha_inicio.ToString("yyyy-MM-dd"))" />
                <span asp-validation-for="Fecha_inicio" class="text-danger"></span>
            </div>

            <!-- Fecha de Fin -->
            <div class="col-md-6">
                <label asp-for="Fecha_fin" class="form-label fw-bold"></label>
                <input asp-for="Fecha_fin" type="date" class="form-control"
                    value="@(Model.Fecha_fin == DateTime.MinValue ? "" : Model.Fecha_fin.ToString("yyyy-MM-dd"))" />
                <span asp-validation-for="Fecha_fin" class="text-danger"></span>
            </div>

            <!-- Monto Mensual -->
            <div class="col-md-6">
                <label asp-for="Monto_mensual" class="form-label fw-bold"></label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input type="text" class="form-control" value="@ViewBag.MontoMensual" readonly />
                </div>
            </div>

            <input asp-for="Monto_mensual" type="hidden" value="@ViewBag.MontoMensual" />


            <!--Estado (oculto) -->
            <input asp-for="Estado" type="hidden" value="Vigente" />





            <!-- Botones -->
            <div class="mt-4 d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Volver
                </a>
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle me-1"></i> Crear
                </button>
            </div>
        </div>
    </form>
</div>



<script>
    document.addEventListener('DOMContentLoaded', function () {
        const inmuebleSelect = document.getElementById("inmuebleSelect");
        const montoMensualDisplay = document.getElementById("montoMensualDisplay");
        const montoMensualReal = document.getElementById("montoMensualReal");

        inmuebleSelect.addEventListener('change', function () {
            const inmuebleId = this.value;

            if (inmuebleId) {
                fetch(`/Contrato/ObtenerPrecioInmueble?id=${inmuebleId}`)
                    .then(response => {
                        if (!response.ok) {
                            throw new Error('Error al obtener el precio');
                        }
                        return response.json();
                    })
                    .then(data => {
                        const precioFormateado = new Intl.NumberFormat('es-AR', {
                            style: 'currency',
                            currency: 'ARS'
                        }).format(data.precio);

                        montoMensualDisplay.value = precioFormateado;
                        montoMensualReal.value = data.precio;
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        montoMensualDisplay.value = '';
                        montoMensualReal.value = '';
                        alert('No se pudo obtener el precio del inmueble');
                    });
            } else {
                montoMensualDisplay.value = '';
                montoMensualReal.value = '';
            }
        });
    });
</script>