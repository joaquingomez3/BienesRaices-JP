@model IEnumerable<bienesraices.Models.Contrato>

@{
    ViewData["Title"] = "Contratos";
}

<div class="container mt-5">
    <h2 class="mb-4">Contratos</h2>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary mb-3">
        <i class="bi bi-arrow-left"></i> Volver
    </a>



    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Inmueble</th>
                <th>Uso</th>
                <th>Inquilino</th>
                <th>Inicio</th>
                <th>Fin</th>
                <th>Monto Mensual</th>
                <th>Creador</th>
                <th>Finalizador </th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var contrato in Model)
            {
                <tr>
                    <td>@Html.Raw(@contrato.InmuebleContrato)</td>
                    <td>(@contrato.InmuebleUso)</td>
                    <td>@contrato.InquilinoContrato</td>
                    <td>@contrato.Fecha_inicio</td>
                    <td>@contrato.Fecha_fin</td>
                    <td>@contrato.Monto_mensual</td>
                    <td>@contrato.Creador</td>
                    <td>@contrato.Finalizador</td>
                    <td>@contrato.Estado</td>
                    <td>
                        <div class="dropdown text-center">
                            <button class="btn btn-secondary btn-sm dropdown-toggle no-caret" type="button"
                                id="dropdownMenuButton-@contrato.Id" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-three-dots-vertical"></i>
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton-@contrato.Id">
                                <li>
                                    <a class="dropdown-item" asp-controller="Contrato" asp-action="Detalle"
                                        asp-route-id="@contrato.Id" target="_blank">
                                        <i class="fa fa-eye me-2"></i> Ver Detalle
                                    </a>
                                </li>

                                @if (contrato.Estado == "Vigente") // Ajustá según tu modelo
                                {
                                    <a class="dropdown-item text-danger btn-rescindir" href="#" data-id="@contrato.Id"
                                        data-fechainicio="@contrato.Fecha_inicio.ToString("yyyy-MM-dd")"
                                        data-fechafin="@contrato.Fecha_fin.ToString("yyyy-MM-dd")"
                                        data-monto="@contrato.Monto_mensual">
                                        <i class="fa fa-file-excel me-2"></i> Rescindir Contrato
                                    </a>

                                }

                                <li>
                                    <a class="dropdown-item text-warning" asp-controller="Pago" asp-action="Deuda"
                                        asp-route-id="@contrato.Id">
                                        <i class="fa fa-exclamation-triangle me-2"></i> Ver Deuda
                                    </a>
                                </li>

                            </ul>
                        </div>
                        @if (contrato.Estado == "Finalizado")
                        {
                            <a class="dropdown-item text-success" asp-controller="Contrato" asp-action="CrearDesdeContrato"
                                asp-route-id="@contrato.Id">
                                <i class="fa fa-sync-alt me-2"></i> Renovar
                            </a>
                        }


                    </td>

                </tr>
            }
        </tbody>
    </table>

    <nav aria-label="Paginación">
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                </li>
            }
        </ul>
    </nav>
</div>
<!-- Modal Rescindir -->
<div class="modal fade" id="modalRescindir" tabindex="-1" aria-labelledby="modalRescindirLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-controller="Contrato" asp-action="Rescindir" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalRescindirLabel">Rescindir Contrato</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="Id" id="contratoId" />

                    <div class="mb-3">
                        <label class="form-label">Fecha de finalización original</label>
                        <input type="date" class="form-control" id="fechaFinOriginal" readonly />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Fecha en la que el inquilino desea terminar</label>
                        <input type="date" class="form-control" name="FechaRescision" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Multa Calculada + Meses Adeudados</label>
                        <input type="text" class="form-control" id="multaCalculada" readonly />
                        <input type="hidden" name="Multa" id="multaHidden" />
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-danger">Confirmar Rescisión</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            // Confirmación de eliminación
            $('.form-eliminar').on('submit', function (e) {
                e.preventDefault();
                const form = this;
                Swal.fire({
                    title: '¿Estás seguro?',
                    text: "Esta acción eliminará un inmueble.",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#bb4900',
                    cancelButtonColor: '#6c757d',
                    confirmButtonText: 'Eliminar',
                    cancelButtonText: 'Cancelar'
                }).then((result) => {
                    if (result.isConfirmed) {
                        form.submit();
                    }
                });
            });

            // Alerta de éxito (si viene desde TempData)
            @if (TempData["MensajeExito"] != null)
                {
                    <text>
                        Swal.fire({
                            icon: 'success',
                        title: '¡Éxito!',
                        text: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(TempData["MensajeExito"])),
                        confirmButtonColor: '#bb4900'
                                                                                                                                                                    });
                    </text>
            }
                                                                                });
    </script>
    <script>

        let fechaInicioGlobal, fechaFinGlobal, montoMensualGlobal;

        // Abrir modal y cargar datos
        $(document).on("click", ".btn-rescindir", function () {
            const id = $(this).data("id");
            const fechaInicio = $(this).data("fechainicio");
            const fechaFin = $(this).data("fechafin");
            const montoMensual = $(this).data("monto");

            // Guardamos en variables globales
            fechaInicioGlobal = new Date(fechaInicio);
            fechaFinGlobal = new Date(fechaFin);
            montoMensualGlobal = parseFloat(montoMensual);

            $("#contratoId").val(id);
            $("#fechaFinOriginal").val(fechaFin);

            $("#multaCalculada").val(""); // limpiar cuando abre

            $("#modalRescindir").modal("show");
        });

        // ✅ Calcular multa en el backend por AJAX
        $(document).on("change", "input[name='FechaRescision']", function () {
            const fechaRescision = $(this).val();
            const idContrato = $("#contratoId").val();

            if (!fechaRescision) return;

            $.ajax({
                url: '/Contrato/CalcularMulta',   // Acción que creaste en el controlador
                type: 'POST',
                data: { idContrato: idContrato, fechaRescision: fechaRescision },
                success: function (data) {
                    if (data && data.multa !== undefined) {
                        $("#multaCalculada").val(`$ ${parseFloat(data.multa).toFixed(2)}`);
                        $("#multaHidden").val(data.multa); // guardo en hidden para mandarlo al servidor
                    } else {
                        $("#multaCalculada").val("Error al calcular");
                    }
                },
                error: function () {
                    $("#multaCalculada").val("Error al calcular");
                }
            });
        });
    </script>


}