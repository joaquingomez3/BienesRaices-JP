<!DOCTYPE html>
<html lang="en">
@using System.Security.Claims

@{
    var claimsIdentity = User.Identity as ClaimsIdentity;
    var fotoPerfil = claimsIdentity?.FindFirst("FotoPerfil")?.Value;
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BienesRaices</title>

    <!-- CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BienesRaices.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/select2-bootstrap-4-theme@1.5.2/dist/select2-bootstrap.min.css"
        rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">


    <!-- (Opcional) Estilo para que Select2 use todo el ancho del form-control -->
    <style>
        .select2-container {
            width: 100% !important;
        }
    </style>
</head>
@if (!(ViewBag.OcultarHeader ?? false))
{

    <header class="navbar navbar-expand-lg navbar-dark shadow-sm"
        style="background: linear-gradient(90deg, #bb4900, #8a2e00);">

        <div class="container-fluid">
            <!-- LOGO -->
            <a class="navbar-brand d-flex align-items-center" href="/Home/Index">
                <img src="~/imagenes/logo.png" alt="Logo" style="height:40px;" class="me-2">
                <span class="fw-bold text-white">Bienes Raíces</span>
            </a>

            <!-- Toggle responsive -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- LINKS -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                    <!-- Propietarios -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                            <i class="bi bi-person-badge me-1"></i> Propietarios
                        </a>
                        <ul class="dropdown-menu shadow-sm">
                            <li><a class="dropdown-item" asp-controller="Propietario" asp-action="Index"><i
                                        class="bi bi-list-ul me-1"></i> Listar</a></li>
                            <li><a class="dropdown-item" asp-controller="Propietario" asp-action="Crear"><i
                                        class="bi bi-person-plus me-1"></i> Crear</a></li>
                        </ul>
                    </li>

                    <!-- Inquilinos -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                            <i class="bi bi-person-lines-fill me-1"></i> Inquilinos
                        </a>
                        <ul class="dropdown-menu shadow-sm">
                            <li><a class="dropdown-item" asp-controller="Inquilino" asp-action="Index"><i
                                        class="bi bi-list-ul me-1"></i> Listar</a></li>
                            <li><a class="dropdown-item" asp-controller="Inquilino" asp-action="Crear"><i
                                        class="bi bi-person-plus me-1"></i> Crear</a></li>
                        </ul>
                    </li>

                    <!-- Inmuebles -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                            <i class="bi bi-house-door me-1"></i> Inmuebles
                        </a>
                        <ul class="dropdown-menu shadow-sm">
                            <li><a class="dropdown-item" asp-controller="Inmueble" asp-action="Index"><i
                                        class="bi bi-list-ul me-1"></i> Listar</a></li>
                            <li><a class="dropdown-item" asp-controller="Inmueble" asp-action="Crear"><i
                                        class="bi bi-house-add me-1"></i> Crear</a></li>
                        </ul>
                    </li>

                    <!-- Pagos -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                            <i class="bi bi-cash-coin me-1"></i> Pagos
                        </a>
                        <ul class="dropdown-menu shadow-sm">
                            <li><a class="dropdown-item" asp-controller="Pago" asp-action="Index"><i
                                        class="bi bi-list-ul me-1"></i> Listar</a></li>
                            <li><a class="dropdown-item" asp-controller="Pago" asp-action="Index"><i
                                        class="bi bi-plus-circle me-1"></i> Crear</a></li>
                        </ul>
                    </li>

                    <!-- Contratos -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                            <i class="bi bi-file-earmark-text me-1"></i> Contratos
                        </a>
                        <ul class="dropdown-menu shadow-sm">
                            <li><a class="dropdown-item" asp-controller="Contrato" asp-action="Index"><i
                                        class="bi bi-list-ul me-1"></i> Listar</a></li>
                            <li><a class="dropdown-item" asp-controller="Contrato" asp-action="Crear"><i
                                        class="bi bi-file-earmark-plus me-1"></i> Crear</a></li>
                        </ul>
                    </li>

                    <!-- Usuarios (solo administrador) -->
                    @if (User.IsInRole("admin"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle me-1"></i> Usuarios
                            </a>
                            <ul class="dropdown-menu shadow-sm">
                                <li><a class="dropdown-item" asp-controller="Usuario" asp-action="Index"><i
                                            class="bi bi-list-ul me-1"></i> Listar</a></li>
                                <li><a class="dropdown-item" asp-controller="Usuario" asp-action="Crear"><i
                                            class="bi bi-person-plus me-1"></i> Crear</a></li>
                            </ul>
                        </li>
                    }
                </ul>

                <!-- PERFIL USUARIO -->
                <div class="dropdown ms-auto">
                    <a class="nav-link dropdown-toggle text-white d-flex align-items-center" href="#" id="userMenu"
                        data-bs-toggle="dropdown">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <div class="d-flex align-items-center">
                                <div class="d-flex flex-column text-end me-2">
                                    <span class="fw-bold">@User.Identity.Name</span>
                                    @if (User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value != null)
                                    {
                                        <span class="badge text-bg-light text-dark mt-1" style="font-size:0.65rem;">
                                            @User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value
                                        </span>
                                    }
                                </div>
                                @if (!string.IsNullOrEmpty(User.FindFirst("FotoPerfil")?.Value))
                                {
                                    <img src="@User.FindFirst("FotoPerfil")?.Value" class="rounded-circle border border-light"
                                        alt="Usuario" width="40" height="40" />
                                }
                                else
                                {
                                    <i class="fas fa-user-circle fa-2x text-light"></i>
                                }
                            </div>
                        }
                        else
                        {
                            <span>No has iniciado sesión</span>
                        }
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end shadow-sm">
                        <li>
                            <a class="dropdown-item logout-link" asp-controller="Usuario" asp-action="Salir">
                                <i class="bi bi-box-arrow-right me-2"></i> Cerrar sesión
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </header>
    <style>
        /* Links */
        .navbar .nav-link {
            color: #fff !important;
            transition: color 0.2s ease-in-out;
        }

        .navbar .nav-link:hover {
            color: #ffd9b3 !important;
            /* un tono claro para contraste */
        }

        /* Dropdowns */
        .dropdown-menu {
            border-radius: 0.75rem;
            overflow: hidden;
        }

        .dropdown-item:hover {
            background-color: #fff4ec;
            color: #bb4900;
        }

        /* Perfil */
        .user-link {
            font-weight: 500;
        }

        .logout-link {
            color: #bb4900 !important;
            font-weight: 500;
        }

        .logout-link i {
            color: #bb4900;
        }
    </style>
}

<body>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer bg-light text-dark fixed-bottom border-top shadow-sm ">
        <div class="container d-flex flex-column flex-md-row justify-content-between align-items-center py-2">
            <!-- Texto -->
            <div class="text-center text-md-start small mb-2 mb-md-0">
                &copy; @DateTime.Now.Year - <strong>Bienes Raices JP</strong>. Todos los derechos reservados.
            </div>

            <!-- Redes sociales -->
            <div class="text-center text-md-end">
                <a href="https://github.com/joaquingomez3/BienesRaices-JP.git" class="text-dark text-opacity-75 mx-2"><i
                        class="bi bi-github fs-5"></i> GitHub </a>

            </div>
        </div>
    </footer>


    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
