<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BienesRaices</title>

    <!-- CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BienesRaices.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">


    <!-- (Opcional) Estilo para que Select2 use todo el ancho del form-control -->
    <style>
        .select2-container {
            width: 100% !important;
        }
    </style>
</head>
@if (!(ViewBag.OcultarHeader ?? false))
    {

        <header class="navbar navbar-expand-lg navbar-dark" >
            <div class="container-fluid" style="color:white;">
               
                <a class="navbar-brand d-flex align-items-center" href="/Home/Index">
                    <img src="~/imagenes/logo.png" alt="Logo" style="height:40px;" class="me-2">
                    <span class="text-white">Bienes Raíces</span>
                </a>

                
                <div class="dropdown ms-auto">
    <a class="nav-link dropdown-toggle text-white d-flex align-items-center" href="#" role="button"
       id="userMenu" data-bs-toggle="dropdown" aria-expanded="false">

                @if (User.Identity != null && User.Identity.IsAuthenticated)
{
    <div class="d-flex align-items-center">

        <div class="d-flex flex-column text-end me-2">
            <span class="fw-bold mt-4">@User.Identity.Name</span>
            <small class="text-muted mt-1">
                (@User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value)
            </small>
        </div>

        @if (User.FindFirst("FotoPerfil")?.Value != null)
        {
            <img src="@User.FindFirst("FotoPerfil")?.Value"
                 class="rounded-circle ms-2"
                 alt="Usuario"
                 width="32"
                 height="32" />
        }
        else
        {
            <i class="fas fa-user-circle fa-2x ms-2"></i>
        }
    </div>
}
else
{
    <span>No has iniciado Sesión</span>
}

    </a>

    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenu">
        <li>
            <a style="color:#bb4900;" class="dropdown-item" asp-controller="Usuario" asp-action="Salir">
                Cerrar Sesión
            </a>
        </li>
    </ul>
</div>

            </div>
        </header>
    }
<body>
   

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer bg-light text-dark fixed-bottom border-top shadow-sm ">
        <div class="container d-flex flex-column flex-md-row justify-content-between align-items-center py-2">
            <!-- Texto -->
            <div class="text-center text-md-start small mb-2 mb-md-0">
                &copy; @DateTime.Now.Year - <strong>Bienes Raices JP</strong>. Todos los derechos reservados.
            </div>

            <!-- Redes sociales -->
            <div class="text-center text-md-end">
                <a href="#" class="text-dark text-opacity-75 mx-2"><i class="bi bi-facebook fs-5"></i></a>
                <a href="#" class="text-dark text-opacity-75 mx-2"><i class="bi bi-instagram fs-5"></i></a>
                <a href="#" class="text-dark text-opacity-75 mx-2"><i class="bi bi-linkedin fs-5"></i></a>
            </div>
        </div>
    </footer>

    
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
