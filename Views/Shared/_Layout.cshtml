<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BienesRaices</title>

    <!-- CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BienesRaices.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" />

    <!-- (Opcional) Estilo para que Select2 use todo el ancho del form-control -->
    <style>
        .select2-container {
            width: 100% !important;
        }
    </style>
</head>

<body>
    @if (ViewData["OcultarHeader"] == null || !(bool)ViewData["OcultarHeader"])
    {

        <header class="navbar navbar-expand-lg navbar-dark  shadow-sm" style="background-color:#bb4900; ">
            <div class="container-fluid" style="color:white;">
                <!-- Logo a la izquierda -->
                <a class="navbar-brand d-flex align-items-center" href="/Home/Index">
                    <img src="~/imagenes/logo.png" alt="Logo" style="height:40px;" class="me-2">
                    <span class="text-white">Bienes Raíces</span>
                </a>

                <!-- Email del usuario a la derecha -->
                <div class="dropdown ms-auto">
                    <a class="nav-link dropdown-toggle text-white" href="#" role="button" id="userMenu"
                        data-bs-toggle="dropdown" aria-expanded="false">
                        @User.Identity.Name <!-- acá se muestra el email de la persona logueada -->
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenu">
                        <li><a style="color:#bb4900; " class="dropdown-item" asp-controller="Usuario"
                                asp-action="Salir">Cerrar Sesión</a></li>
                    </ul>
                </div>
            </div>
        </header>
    }

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer bg-light text-dark fixed-bottom border-top shadow-sm">
        <div class="container d-flex flex-column flex-md-row justify-content-between align-items-center py-2">
            <!-- Texto -->
            <div class="text-center text-md-start small mb-2 mb-md-0">
                &copy; @DateTime.Now.Year - <strong>Bienes Raices JP</strong>. Todos los derechos reservados.
            </div>

            <!-- Redes sociales -->
            <div class="text-center text-md-end">
                <a href="#" class="text-dark text-opacity-75 mx-2"><i class="bi bi-facebook fs-5"></i></a>
                <a href="#" class="text-dark text-opacity-75 mx-2"><i class="bi bi-instagram fs-5"></i></a>
                <a href="#" class="text-dark text-opacity-75 mx-2"><i class="bi bi-linkedin fs-5"></i></a>
            </div>
        </div>
    </footer>

    <!-- JS (una sola vez jQuery) -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
