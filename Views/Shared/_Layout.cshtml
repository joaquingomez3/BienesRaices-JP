<!DOCTYPE html>
<html lang="en">
@using System.Security.Claims

@{
    var claimsIdentity = User.Identity as ClaimsIdentity;
    var fotoPerfil = claimsIdentity?.FindFirst("FotoPerfil")?.Value;
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BienesRaices</title>

    <!-- CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BienesRaices.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/select2-bootstrap-4-theme@1.5.2/dist/select2-bootstrap.min.css"
        rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">


    <!-- (Opcional) Estilo para que Select2 use todo el ancho del form-control -->
    <style>
        .select2-container {
            width: 100% !important;
        }
    </style>
</head>
@if (!(ViewBag.OcultarHeader ?? false))
{

    <header class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid" style="color:white;">

            <a class="navbar-brand d-flex align-items-center" href="/Home/Index">
                <img src="~/imagenes/logo.png" alt="Logo" style="height:40px;" class="me-2">
                <span class="text-white">Bienes Raíces</span>
            </a>


            <div class="dropdown ms-auto">
                <a class="nav-link dropdown-toggle text-white d-flex align-items-center" href="#" role="button"
                    id="userMenu" data-bs-toggle="dropdown" aria-expanded="false">
                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <div class="d-flex align-items-center">
                            @* Información del usuario *@
                            <div class="d-flex flex-column text-end me-2">
                                <span class="fw-bold">@User.Identity.Name</span>
                                @if (User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value != null)
                                {
                                    <span class="badge text-bg-light text-dark mt-1" style="font-size:0.65rem;">
                                        @User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value
                                    </span>
                                }
                            </div>

                            @* Foto de perfil o ícono *@
                            @if (!string.IsNullOrEmpty(User.FindFirst("FotoPerfil")?.Value))
                            {
                                <img src="@User.FindFirst("FotoPerfil")?.Value" class="rounded-circle border border-light"
                                    alt="Usuario" width="40" height="40" />
                            }
                            else
                            {
                                <i class="fas fa-user-circle fa-2x text-light"></i>
                            }
                        </div>
                    }
                    else
                    {
                        <span>No has iniciado sesión</span>
                    }
                </a>

                @* Dropdown *@
                <ul class="dropdown-menu dropdown-menu-end shadow-sm" aria-labelledby="userMenu">
                    <li>
                        <a class="dropdown-item text-primary" style="color:#bb4900;" asp-controller="Usuario"
                            asp-action="Salir">
                            <i class="fas fa-sign-out-alt me-2" style="color:#bb4900;"></i> Cerrar sesión
                        </a>
                    </li>
                </ul>
            </div>

        </div>
    </header>
}

<body>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer bg-light text-dark fixed-bottom border-top shadow-sm ">
        <div class="container d-flex flex-column flex-md-row justify-content-between align-items-center py-2">
            <!-- Texto -->
            <div class="text-center text-md-start small mb-2 mb-md-0">
                &copy; @DateTime.Now.Year - <strong>Bienes Raices JP</strong>. Todos los derechos reservados.
            </div>

            <!-- Redes sociales -->
            <div class="text-center text-md-end">
                <a href="https://github.com/joaquingomez3/BienesRaices-JP.git" class="text-dark text-opacity-75 mx-2"><i
                        class="bi bi-github fs-5"></i> GitHub </a>

            </div>
        </div>
    </footer>


    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
